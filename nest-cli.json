{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "typeCheck": true,
    "watchMode": true,
    "assets": ["**/*.json", "**/*.yaml", "**/*.yml"],
    "watchAssets": true,
    "plugins": ["@nestjs/swagger"]
  }
}
