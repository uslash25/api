model McpGroup {
  id String @id

  description String?

  ownerId String

  owner User @relation(fields: [ownerId], references: [id])

  mcps Mcp[] @relation("McpGroupMcps")

  chats McpGroupChat[]

  deployed      Boolean   @default(false)
  deploymentUrl String?
  deployedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model McpGroupChat {
  id String @id @default(uuid())

  mcpGroupId String

  mcpGroup McpGroup @relation(fields: [mcpGroupId], references: [id])

  message String
  role    McpChatRole

  createdAt DateTime @default(now())
}
